<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/header') %> 
<body>
  <%- include('../../partials/homenavbar') %>
  
  <div class="container">
    <% result.articles.rows.forEach( article => { %>
      <br>
      <div class="card">
        <div class="card-header">
          
          <h2><%= article.title %></h2>
        </div>
        <div class="card-body">
          <a href="<%= article.slug %>" class="btn btn-success">Ler artigo</a>
        </div>
      </div>
    <% }) %> 

    <div class="row">
      <div class="col col-12">
        <% if(result.page > 2){ %>
        <a style="float: left" href="/article/page/<%= result.page - 1 %>"> << PREV</a>
        <% } else if(result.page == 2) { %>
          <a style="float: left" href="/"> << PREV</a>
        <%  } %>

        <% if(result.next){ %>
          <a style="float: right" href="/article/page/<%= result.page + 1 %>">NEXT >> </a>
        <%  } %>
       
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %> 
</body>
</html>