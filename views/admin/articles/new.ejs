<!DOCTYPE html>
<html lang="en">
  <%- include('../../partials/header') %> 
<body>
  <%- include('../../partials/navbar') %>

  <div class="container">
    <br>
    <div class="card">
      <div class="card-header">
        <h2>Novo artigo</h2>
      </div>
      <div class="card-body">
        <form method="POST" action="/categories/save">
          <input class="form-control" type="text" name="title" placeholder="Digite o titulo da categoria" />
          <br>
          <textarea class="form-control" placeholder="Digite o artigo" name="body" id="article"></textarea>
          <br>
          <button class="btn btn-success">CADASTRAR</button>
        </form>
      </div>
    </div>
  </div>

  <%- include('../../partials/footer') %> 
  <script src="/tinymce/tinymce.min.js"></script>
  <script>
    tinymce.init({
      language:'pt_BR',
      selector:"#article",
      plugins: [
        'advlist autolist link image lists preview hr searchreplace wordcount fullscreen inserdatetime media save table paste emoticons'
      ]
    })
  </script>
</body>
</html>